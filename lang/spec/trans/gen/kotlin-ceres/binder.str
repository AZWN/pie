module gen/kotlin-ceres/binder

imports

  signatures/-
  signatures/lex/-
  signatures/impl/-
  
  gen/kotlin/type2kotlin
  gen/util
  gen/debug

rules

  p2c-binder:
    SingleBinder(bind) -> <p2c-bind> bind
  p2c-binder:
    TupleBinder(binds) -> $[([bindStr])]
    with
      bindStr := <map(p2c-bind); pipe-sep-comma; concat-strings> binds

  p2c-bind: Bind(varId)      -> $[[varId]]
  p2c-bind: TBind(varId, ty) -> $[[varId] : [[<t2k-sig> ty]]]
