module pp

imports

  libstratego-gpp
  libspoofax/sdf/pp
  libspoofax/editor/refactoring/-
  pp/pipe-parenthesize
  pp/pipe-pp
  pp/impl/-
  pp/lex/-

rules

  editor-format:
    (node, _, ast, path, project-path) -> (filename, result)
    with
      ext      := <get-extension> path
    ; filename := <guarantee-extension(|$[pp.[ext]])> path
    ; result   := <pp-debug> node

rules
  
  pp-pipe-string =
    parenthesize-pipe
    ; prettyprint-pipe-start-symbols
    ; !V([], <id>)
    ; box2text-string(|120)
      
  pp-partial-pipe-string =
    parenthesize-pipe
    ; prettyprint-pipe
    ; !V([], <id>)
    ; box2text-string(|120)
    
  pp-partial-pipe-string(|sort) =
    parenthesize-pipe
    ; prettyprint-pipe(|sort)
    ; !V([], <id>)
    ; box2text-string(|120)  
      
  pp-debug :
    ast -> result
    with
       result := <pp-pipe-string> ast
    <+ <bottomup(try(not(is-string); not(is-list); not(pp-pipe-string); debug(!"cannot pp ")))> ast
    ;  result := ""

rules
  
  construct-textual-change = construct-textual-change(pp-partial-pipe-string, parenthesize, override-reconstruction, resugar)
